<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textCep"
        android:layout_width="229dp"
        android:layout_height="46dp"
        android:layout_marginBottom="256dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="71dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="209dp"
        android:ems="10"
        android:hint="Digite seu CEP"
        android:inputType="none|textPostalAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonOK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="63dp"
        android:layout_height="46dp"
        android:layout_marginBottom="261dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="208dp"
        android:text="OK"
        android:onClick="openAddressActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textCep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonCad"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginBottom="157dp"
        android:layout_marginEnd="28dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:onClick="openSignUpActivity"
        android:text="Cadastrar"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginBottom="158dp"
        android:layout_marginEnd="9dp"
        android:layout_marginLeft="157dp"
        android:layout_marginRight="9dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="16dp"
        android:onClick="openSignUpActivity"
        android:text="Entrar"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textCep"
        app:layout_constraintEnd_toStartOf="@+id/buttonCad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAddress"
        android:layout_width="172dp"
        android:layout_height="27dp"

        android:layout_marginBottom="221dp"
        android:layout_marginEnd="102dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="102dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="openAddressActivity"
        android:text="Ou informe seu endereÃ§o"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCep" />
</android.support.constraint.ConstraintLayout>