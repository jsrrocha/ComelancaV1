<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".AddressActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="69dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="91dp"
        android:text="Informe o endereço de entrega"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerState"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinnerState"
        android:layout_width="89dp"
        android:layout_height="40dp"
        android:layout_marginBottom="350dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:entries="@array/states"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinnerCities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spinnerCities"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginBottom="342dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="31dp"
        android:entries="@array/cities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerState"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="261dp"
        android:layout_height="40dp"
        android:layout_marginBottom="279dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Digite seu endereço"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerState" />

    <EditText
        android:id="@+id/editTextNum"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:layout_marginBottom="279dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="N°"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextAddress"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCities" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="14dp"
        android:text="Voltar"
        android:onClick="openMainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />

    <Button
        android:id="@+id/button4"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:text="BUSCAR"
        android:onClick="openListRestaurantActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />

</android.support.constraint.ConstraintLayout>